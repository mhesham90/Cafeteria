<section class="menu">

  <div class="wrapper">
    <div class="menu_title" id="mainmenu">
      <h2>The Menu</h2>
      <ul class="nav nav-tabs">
        <% @categories.each_with_index do |cat,index| %>
        <li class="<%= 'active' if index==0%>"><a data-toggle="tab" href=#<%= cat.name%> style="color:black"> <%=cat.name%></a></li>
                                    <%end%>

      </ul>
    </div>
    <div class="tab-content">
      <% @categories.each_with_index do |cat,index| %>
      <div id="<%= cat.name%>" class="tab-pane fade in <%= 'active' if index==0%>">
        <div class="mean_menu">
          <!--  left menu row  -->


          <article class="lmenu">
            <ul>
              <% @products.each_with_index do |product,index| %>
                  <%if product.category.id== cat.id  and index %2==0%>
              <li>

                <div class="item_info">

                  <h3 class="item_name"><%=product.name %> </h3>

                </div>
                <h4 class="price"><%=product.price%> LE</h4>
                <span class="separator"></span>
              </li>
                               <%end%>
                               <%end%>



            </ul>
          </article>

          <!--  right menu row  -->
          <article class="rmenu">
            <ul>
              <% @products.each_with_index do |product,index| %>
                  <%if product.category.name== cat.name  and index %2 != 0%>
                      <li>

                        <div class="item_info">

                          <h3 class="item_name"><%=product.name %> </h3>

                        </div>
                        <h4 class="price"><%=product.price%> LE</h4>
                        <span class="separator"></span>
                      </li>
<%end%>
                      <%end%>
            </ul>
          </article>
        </div>

        <!--  hidden menu items  -->


      </div>

      <%end%>
</div>

  </div>

</section>
<!--  end menu  -->
