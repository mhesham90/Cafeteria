
<div class="col-md-6 panel panel-default">
  <div class="panel-body">

    <h1>Edit Customer</h1>
    <hr/>
    <%= form_for :user, :html => {:class => "form-horizontal center",multipart: true} ,url: user_path(@user), method: :patch do |f|%>


            <%= f.label :First_name  , class: "control-label"%>
           <%= f.text_field :first_name ,class: "form-control" ,style:"width:100%" %>


      <%= f.label :last_name  , class: "control-label"%>
      <%= f.text_field :last_name ,class: "form-control" ,style:"width:100%" %>



            <%= f.label :email  , class: "control-label"%>
            <%= f.text_field :email ,class: "form-control" ,style:"width:100%"%>


        <hr/>

        <%= f.label :admin  , class: "control-label"%>
        <%= f.check_box :admin ,class: "checkbox-inline form-control" ,style:"width:50%"%><hr/>
        <% if @user.avatar.exists?%>
        <%= image_tag @user.avatar.url , class:"img-thumbnail" ,style:"width:150px" %>
        <%end%>
            <div>
        <%= f.label :image  , class: "control-label"%>
        <%= f.file_field :avatar ,class: "form-control" %>
        </div>
        <%= f.label :Room , class: "control-label"%>
        <%= f.collection_select :room_id, Room.all, :id, :name, {prompt: "Select Room"}, {class: "form-control"} %>
<br/>
            <%= f.submit "Save", class: "btn btn-default "  %>
        </div>
        <% end %>
</div>
<div class="col-md-1"></div>




