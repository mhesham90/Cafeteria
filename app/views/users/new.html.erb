<html>

<div class="col-md-1"></div>
<div class="col-md-5">
    <h1>Add Customer</h1>
    <hr/>
    <%= form_for :user, :html => {:class => "form-horizontal center"} ,url: users_path do |f|%>
      <%= f.label :First_name  , class: "control-label"%>
      <%= f.text_field :first_name ,class: "form-control" ,style:"width:100%" %>


      <%= f.label :last_name  , class: "control-label"%>
      <%= f.text_field :last_name ,class: "form-control" ,style:"width:100%" %>



      <%= f.label :email  , class: "control-label"%>
      <%= f.text_field :email ,class: "form-control" ,style:"width:100%"%>




      <%= f.label :admin  , class: "control-label"%>
      <%= f.check_box :admin ,class: "checkbox-inline form-control" ,style:"width:50%"%><br/>
      <%= f.label :image  , class: "control-label"%>
      <%= f.file_field :image ,class: "form-control" %>
      <%= f.label :Room , class: "control-label"%>
      <%= f.collection_select :room_id, Room.all, :id, :name, {prompt: "Select Room"}, {class: "form-control"} %>
      <br/>
      <%= f.submit "Save", class: "btn btn-default "  %>
        <% end %>
</div>
<div class="col-md-4"></div>

</html>