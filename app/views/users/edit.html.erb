<div class="col-md-4">
    <h1>Edit user</h1>
    <hr/>
    <%= form_for :user, :html => {:class => "form-horizontal center"} ,url: user_path(@user), method: :patch do |f|%>
        <div class="form-group">

            <%= f.label :name  , class: "control-label"%><br>
                <%= f.text_field :first_name ,class: "form-control" %>

        </div>
        <div class="form-group">

            <%= f.label :email  , class: "control-label"%><br>
                <%= f.text_field :email ,class: "form-control"%>
        </div>
        <div class="form-group">
            <%= f.label :password  , class: "control-label"%><br>
                <%= f.password_field :password , class: "form-control" %>

        </div>

        <div class="form-group">

            <%= f.submit "Save", class: "btn btn-default btn-primary"  %>
        </div>
        <% end %>
</div>
