
<%= form_for(product ,:html => {:class => "form-horizontal center",multipart: true} )  do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name  , class: "control-label"%>
    <%= f.text_field :name  ,class: "form-control" , style:"width:100%"%>
  </div>
    <div class="field">
      <%= f.label :price , class: "control-label"%>
      <%= f.number_field :price  ,class: "form-control  ",style:"width:100%"%>
    </div>
    <% if @product.avatar.exists?%>
    <%= image_tag @product.avatar.url , class:"img-thumbnail" ,style:"width:150px" %>
<%end%>
  <div class="field">
    <%= f.label :image  , class: "control-label " %>
    <%= f.file_field :avatar ,class:"btn-file"  %>
  </div>

  <div class="field" >
    <%= f.label :category_id   , class: "control-label"%>
    <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Select a category"}, {class: "form-control"} %>
  </div>






  <div class="field">
    <%= f.label :Available  , class: "control-label" %>
    <%= f.check_box :status  ,class: "form-check-input"%>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>
