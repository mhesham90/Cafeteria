<div class="col-md-12">

    <div class="col-md-1"></div>

    <div class="col-md-10">

        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div id="order" class="panel-body">
                        </div>
                        <hr/>
                        <div>
                            notes:<input id="notes" type="text">
                            total:<label id="total" ></label>

                            <input type="button" onclick="checkOut()" value="check out">
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <% if current_user.admin=='1'%>
                                <select id="users_list">
                                <% @users.each do |user| %>
                                    <option value="<%= user.id %>"><%= user.first_name + " " +user.last_name  %></option>
                                <%end%>
                                </select>
                            <% else %>

                                <% if current_user.orders.last %>
                                    <% current_user.orders.last.products.each do |product| %>
                                            <p>
                                                <%=product.name%>
                                                <%=product.price%>
                                                    <%  if product.avatar.exists?%>
                                                        <%= image_tag product.avatar.url , class:"img-thumbnail" ,onclick:"addProductToOrder("+(product.id).to_s+")" ,style:"width:150px" %>
                                                    <%  end%>
                                            </p>                                    
                                        <%end%>
                                    
                                    <% else %>
                                    <h1>we are pleasure to take your first order </h1>

                                    <%end%>
                            <% end %>

                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div>
                                <ul class="nav nav-tabs">

                                    <% @categories.each_with_index do |category,index| %>


                                        <li class=" <%= 'active' if index==0%> ">
                                            <a data-toggle="tab" href="#cat-<%=category.id%>">
                                                <%=category.name%>
                                            </a>
                                        </li>

                                        <% end %>
                                </ul>
                            </div>
                            <div id="tab-content" class="tab-content">

                                <% @categories.each_with_index do |category,index| %>
                                    <div id='cat-<%=category.id%>' class="tab-pane fade in <%= 'active' if index==0%> ">
                                    </div>
                                    <% end %>

                            </div>



                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

