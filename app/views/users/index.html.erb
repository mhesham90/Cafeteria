<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-body">
      <section class="menu">
        <div class="menu_title" id="mainmenu">
          <h2>Customers</h2>

        </div>
      </section>
      <table class="table table-hover">
        <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Role</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @users.each do |user|%>

            <td ><%= user.first_name%></td>
            <td ><%= user.last_name%></td>
            <td ><%= user.email%></td>
            <% if user.admin=='1' %>
                <td >Admin</td>
            <% else %>
                <td >regular user</td>
            <%end%>

            <td > <%= link_to 'Edit', edit_user_path(user) %></td>
            <td > <%= link_to 'delete', user_path(user) , method: :delete, data: {confirm: "are you sure?"} %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
<div class="col-md-1"></div>